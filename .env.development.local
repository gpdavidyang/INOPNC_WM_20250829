# Development Performance Optimization Settings

# Disable verbose logging
NEXT_TELEMETRY_DISABLED=1

# Reduce webpack output
NEXT_PUBLIC_DISABLE_CONSOLE_LOGS=true

# Fast refresh configuration
NEXT_PUBLIC_FAST_REFRESH=true

# Reduce build logging
NEXT_PUBLIC_BUILD_INDICATOR=false

# Cache optimization
NEXT_PUBLIC_CACHE_SSG_MINUTES=60

# Disable source maps in development for faster builds
GENERATE_SOURCEMAP=false

# Increase Node memory for better performance
NODE_OPTIONS="--max-old-space-size=4096"

# Optimize bundle analyzer
ANALYZE=false